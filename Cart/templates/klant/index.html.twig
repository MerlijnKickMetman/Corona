{% extends 'base.html.twig' %}

{% block title %}Klant index{% endblock %}

{% block body %}
<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Navigation
  </button>
  <div class="dropdown-menu" aria-labelledby="Navigation">
    <a class="dropdown-item" href="{{ path('klant_index')}}">Klant</a>
    <a class="dropdown-item" href="{{ path('factuur_index')}}">Factuur</a>
    <a class="dropdown-item" href="{{ path('product_index')}}">Product</a>
    <a class="dropdown-item" href="{{ path('factuur_regel_index')}}">Factuurregel</a>
  </div>
</div>
    <h1>Klant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>KlantNaam</th>
                <th>BtwNummer</th>
                <th>Address</th>
                <th>Plaats</th>
                <th>Postcode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for klant in klants %}
            <tr>
                <td>{{ klant.id }}</td>
                <td>{{ klant.KlantNaam }}</td>
                <td>{{ klant.BtwNummer }}</td>
                <td>{{ klant.Address }}</td>
                <td>{{ klant.Plaats }}</td>
                <td>{{ klant.Postcode }}</td>
                <td>
                    <a href="{{ path('klant_show', {'id': klant.id}) }}">show</a>
                    <a href="{{ path('klant_edit', {'id': klant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('klant_new') }}">Create new</a>
{% endblock %}
